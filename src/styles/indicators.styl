@import 'nib'

.indicators-list
  list-style none

.indicators-container
  position absolute
  bottom 3em
  right 3em
  width 330px
  
  .indicator
    float left
    margin 1em
    padding 0.5em 0
    width 60px
    text-align center
    box-shadow  0 0 30px 0 white
    border-radius 10px
    opacity 0
    transition all 1s
    color white
    font-weight bold

    &.visible
      opacity 1

    &.off
      background-color gray
    &.ok
      background-color rgba(0,255,0,0.7)
      box-shadow 0 0 30px 0 green
    &.fail
      background-color rgba(255,0,0,0.6)
      box-shadow 0 0 30px 0 red
    &.warn
      background-color rgba(255,255,0,0.7)
      box-shadow 0 0 30px 0 yellow
