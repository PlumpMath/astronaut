@import 'nib'

.terminal-container
  width 400px
  height 250px
  visibility hidden
  background-color #222
  border 1px solid #888
  opacity 0.7
  margin 4em 0 0 4em
  transform perspective(600px) rotateY(10deg)

.pullDownTerminal
  animation-name pullDownTerminal
  animation-duration 1.1s
  animation-timing-function ease-out
  transform-origin 50% 0%
  visibility visible !important

@keyframes pullDownTerminal
  0%
    transform perspective(600px) rotateY(10deg) scaleY(0.1)
  40%
    transform perspective(600px) rotateY(10deg) scaleY(1.02)
  60%
    transform perspective(600px) rotateY(10deg) scaleY(0.98)
  80%
    transform perspective(600px) rotateY(10deg) scaleY(1.01)
  100%
    transform perspective(600px) rotateY(10deg) scaleY(0.98)
  80%
    transform perspective(600px) rotateY(10deg) scaleY(1.01)
  100%
    transform perspective(600px) rotateY(10deg) scaleY(1)
